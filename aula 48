# Importar as bibliotecas necessárias
import pandas as pd 
import numpy as np 
import matplotlib.pyplot as plt 

# Criar um pequeno dataframe 
dados = {'Nome': ['Ana', 'João', 'Carlos', 'Maria'], 'Idade': [16, 17, 15, 16], 'Notas': [9.5, 8.7, 7.8, 9.2]}
df = pd.DataFrame(dados)

# Visualizar o dataframe
print(df)

# Criar um gráfico de barras para visualizar as notas
plt.bar(df['Nome'], df['Notas'])
plt.xlabel('Nome')
plt.ylabel('Notas')
plt.title('Notas dos Alunos')
plt.show()
